
<div class="row"> 
    <div class="col-xs-6">
    <% @books.each do |book| %>
        <div class=" panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= link_to book.title, book %></h3>
          </div>
          <div class="panel-body">
                <div class="col-xs-4"><a href="<%= book_url(book) %>"><%= image_tag(book.image.profile_size.url) %></a></div>
                <div class="col-xs-8"> 
                  ISBN:<%= book.isbn %><br><br>
                  Pages:<%=  book.pages %><br><br>
                  Author:<%= book.author %><br><br>
                  Owner:<%= book.owner %><br><br>
                  Phone No:<%= book.phone_no %><br><br>
                  Publisher:<%= book.publisher %><br><br>
                </div>     
          </div>
        </div> 
        <% end %>
    </div>
    <div class="col-xs-1"></div>
    <% if user_signed_in? %>
    <div class="span3 col-xs-5">
     <div class="side-bar"> 
           <div class="ls_profile ls_blue">
               <div> 
               <div class="col-xs-4">
                    <img class="img-size" src="https://www.google.co.in/images/srpr/logo11w.png">
                </div>
                <div class="col-xs-8 ls_profile_info">
                    <h3 class="size"><a href="#"><%= current_user.email %></a></h3><br><br>
                </div>
           </div>
                <div class="clearfix"></div>
           </div>
       </div>
    </div>
    <% end %>
</div>    
